<% content_for :title, @campaign.product_name %>

<!-- Enable Turbo Streams for real-time updates -->
<%= turbo_stream_from @campaign %>

<div class="max-w-6xl mx-auto">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% if alert.present? %>
    <p class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-md inline-block" id="alert"><%= alert %></p>
  <% end %>

  <!-- Campaign Details -->
  <%= render @campaign %>

  <div class="mt-8 flex flex-wrap gap-2">
    <%= link_to "Edytuj kampanię", edit_campaign_path(@campaign), class: "rounded-md px-3.5 py-2.5 bg-indigo-600 hover:bg-indigo-700 text-white inline-block font-medium" %>
    <%= link_to "Wróć do kampanii", campaigns_path, class: "rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
    <%= button_to "Usuń kampanię", @campaign, method: :delete, form_class: "inline-block", class: "rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Czy na pewno chcesz usunąć tę kampanię?" } %>
  </div>

  <!-- Phase A: Generation Status & Creatives -->
  <div class="mt-12 pt-8 border-t border-gray-200">
    <div class="mb-6">
      <h2 class="font-bold text-2xl text-gray-900">Koncepcje reklamowe AI</h2>
      <p class="text-sm text-gray-600 mt-1">Faza A: Generowanie tekstów (nagłówki, treść reklamy, prompty do obrazów)</p>
    </div>

    <!-- Status Section (Turbo Stream Target) -->
    <%= render partial: "campaigns/status", locals: { campaign: @campaign } %>

    <!-- Creatives Grid (Turbo Stream Target) -->
    <% if @campaign.creatives.any? %>
      <div class="mt-8">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-lg font-semibold text-gray-900">
            Wygenerowane koncepcje (<%= @campaign.creatives.count %>)
          </h3>
          <%= link_to "Zobacz wszystkie szczegóły →",
                      campaign_creatives_path(@campaign),
                      class: "text-sm font-medium text-indigo-600 hover:text-indigo-700 transition-colors" %>
        </div>

        <div id="campaign_<%= @campaign.id %>_creatives" class="grid md:grid-cols-3 gap-6">
          <% @campaign.creatives.recent.each do |creative| %>
            <%= render partial: "creatives/card", locals: { creative: creative } %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
