<div id="<%= dom_id campaign %>" class="w-full my-5">
  <div class="flex items-center gap-4 mb-6">
    <div class="w-16 h-16 rounded-md flex-shrink-0" style="background-color: <%= campaign.brand_primary_color %>"></div>
    <div>
      <h1 class="font-bold text-4xl"><%= campaign.product_name %></h1>
      <p class="text-gray-600 mt-1">
        <%= link_to campaign.brand.name, campaign.brand, class: "text-blue-600 hover:underline" %>
      </p>
    </div>
  </div>

  <div class="space-y-4">
    <div>
      <strong class="block font-medium mb-1 text-gray-700">Target Audience:</strong>
      <p class="text-gray-900"><%= campaign.target_audience %></p>
    </div>

    <% if campaign.description.present? %>
      <div>
        <strong class="block font-medium mb-1 text-gray-700">Description:</strong>
        <div class="text-gray-900"><%= simple_format(campaign.description) %></div>
      </div>
    <% end %>

    <div class="text-sm text-gray-500">
      Created <%= time_ago_in_words(campaign.created_at) %> ago
    </div>
  </div>
</div>
