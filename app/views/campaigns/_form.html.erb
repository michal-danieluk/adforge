<%= form_with(model: campaign, class: "contents") do |form| %>
  <% if campaign.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(campaign.errors.count, "error") %> prohibited this campaign from being saved:</h2>

      <ul class="list-disc ml-6">
        <% campaign.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :brand_id %>
    <%= form.text_field :brand_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": campaign.errors[:brand_id].none?, "border-red-400 focus:outline-red-600": campaign.errors[:brand_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :product_name %>
    <%= form.text_field :product_name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": campaign.errors[:product_name].none?, "border-red-400 focus:outline-red-600": campaign.errors[:product_name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :target_audience %>
    <%= form.text_field :target_audience, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": campaign.errors[:target_audience].none?, "border-red-400 focus:outline-red-600": campaign.errors[:target_audience].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.textarea :description, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": campaign.errors[:description].none?, "border-red-400 focus:outline-red-600": campaign.errors[:description].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
