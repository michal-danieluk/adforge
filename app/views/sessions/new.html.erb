<div class="mx-auto md:w-2/3 w-full">
  <div class="max-w-md mx-auto mt-12">
    <div class="bg-white shadow-lg rounded-lg p-8">
      <% if alert = flash[:alert] %>
        <p class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-lg" id="alert"><%= alert %></p>
      <% end %>

      <% if notice = flash[:notice] %>
        <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg" id="notice"><%= notice %></p>
      <% end %>

      <h1 class="font-bold text-3xl mb-6">Zaloguj się</h1>

      <%= form_with url: session_url, class: "space-y-5" do |form| %>
        <div>
          <%= form.label :email_address, "Email", class: "block font-medium mb-1" %>
          <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "username", placeholder: "Wpisz swój adres email", value: params[:email_address], class: "w-full border rounded px-3 py-2" %>
        </div>

        <div>
          <%= form.label :password, "Hasło", class: "block font-medium mb-1" %>
          <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Wpisz hasło", maxlength: 72, class: "w-full border rounded px-3 py-2" %>
        </div>

        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
          <div>
            <%= form.submit "Zaloguj się", class: "w-full sm:w-auto text-center rounded-md px-6 py-2.5 bg-indigo-600 hover:bg-indigo-700 text-white font-semibold cursor-pointer transition-colors" %>
          </div>

          <div class="text-sm text-gray-500">
            <%= link_to "Zapomniałeś hasła?", new_password_path, class: "text-gray-700 underline hover:no-underline" %>
          </div>
        </div>
      <% end %>

      <div class="mt-6 text-center text-sm text-gray-600">
        Nie masz konta? <%= link_to "Zarejestruj się", new_registration_path, class: "text-indigo-600 hover:underline font-medium" %>
      </div>
    </div>
  </div>
</div>
