<div class="max-w-2xl mx-auto py-8 px-4">
  <div class="bg-white rounded-lg shadow p-6">
    <h1 class="text-2xl font-bold text-gray-900 mb-6">Ustawienia</h1>

    <%= form_with model: @app_config, url: admin_settings_path, method: :patch, class: "space-y-6" do |f| %>
      <% if @app_config.errors.any? %>
        <div class="bg-red-50 text-red-500 p-4 rounded mb-4">
          <ul>
            <% @app_config.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :ai_model, "Model AI do generowania obrazów", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :ai_model,
            options_for_select([
              ["Gemini 2.5 Flash Image (Zalecany)", "gemini-2.5-flash-image"],
              ["Imagen 4 (Premium jakość)", "imagen-4.0-generate-001"]
            ], @app_config.ai_model),
            {},
            class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
        <p class="mt-2 text-sm text-gray-500">
          Wybierz między szybkością a jakością premium.
        </p>
      </div>

      <div>
        <%= f.label :gemini_api_key, "Klucz API Google (Gemini/Imagen)", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :gemini_api_key, value: @app_config.gemini_api_key, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500", placeholder: "Wklej swój klucz tutaj..." %>
        <p class="mt-2 text-sm text-gray-500">
          Ten klucz jest bezpiecznie przechowywany przy użyciu szyfrowania Rails. Jest wymagany do generowania obrazów z Imagen 3.
        </p>
      </div>

      <div class="flex justify-end">
        <%= f.submit "Zapisz ustawienia", class: "bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>
  </div>
</div>
