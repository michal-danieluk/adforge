<div class="bg-white border border-zinc-200 rounded-lg overflow-hidden hover:shadow-md hover:border-indigo-200 transition-all" id="creative_<%= creative.id %>">
  <!-- Image Section (Phase B) -->
  <% if creative.final_image.attached? %>
    <%= image_tag creative.final_image, class: "w-full aspect-square object-cover" %>
  <% else %>
    <!-- Placeholder -->
    <div class="bg-zinc-100 aspect-square flex items-center justify-center">
      <div class="text-center p-6">
        <svg class="mx-auto h-12 w-12 text-zinc-400 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        <p class="text-xs text-zinc-500 font-medium mb-3">Oczekiwanie na obraz</p>
        <%= button_to "üé® Renderuj (Imagen)", render_image_campaign_creative_path(creative.campaign, creative), method: :post, class: "bg-indigo-600 hover:bg-indigo-700 text-white text-xs px-3 py-2 rounded shadow transition-colors" %>
      </div>
    </div>
  <% end %>

  <!-- Creative Content -->
  <div class="p-4">
    <% if creative.headline.present? %>
      <div id="creative_<%= creative.id %>_headline" class="mb-3">
        <h3 class="text-lg font-bold text-zinc-900 mb-2 line-clamp-2">
          <%= creative.headline %>
        </h3>
        <%= button_to "‚ú® Przepisz", rewrite_campaign_creative_path(creative.campaign, creative), method: :post, class: "text-xs font-medium text-indigo-600 hover:text-indigo-700 transition-colors inline-flex items-center" %>
      </div>
    <% end %>

    <% if creative.body.present? %>
      <p class="text-sm text-zinc-600 mb-3 line-clamp-3">
        <%= creative.body %>
      </p>
    <% end %>

    <!-- Status Badge -->
    <div class="flex items-center justify-between mt-4 pt-3 border-t border-zinc-100">
      <% status_classes = case creative.status
         when "generated" then "bg-green-100 text-green-800"
         when "failed" then "bg-red-100 text-red-800"
         else "bg-yellow-100 text-yellow-800"
         end
         status_text = case creative.status
         when "generated" then "Gotowe"
         when "failed" then "B≈ÇƒÖd Generowania"
         else "OczekujƒÖce"
         end %>
      <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium <%= status_classes %>">
        <%= status_text %>
      </span>
      <span class="text-xs text-zinc-400">
        <%= time_ago_in_words(creative.created_at) %> temu
      </span>
    </div>

    <!-- AI Metadata -->
    <% if creative.ai_metadata.present? %>
      <div class="mt-3 pt-3 border-t border-zinc-100">
        <div class="flex items-center justify-between text-xs text-zinc-500">
          <span>
            <%= creative.ai_metadata["model"] || creative.ai_model %>
          </span>
          <span>
            <%= number_with_delimiter(creative.ai_metadata["tokens_share"] || creative.ai_tokens) %> token√≥w
          </span>
        </div>
      </div>
    <% end %>

    <!-- View Details Link -->
    <%= link_to "Zobacz szczeg√≥≈Çy ‚Üí",
                campaign_creative_path(creative.campaign, creative),
                class: "mt-3 block text-sm font-medium text-indigo-600 hover:text-indigo-700 transition-colors" %>
  </div>
</div>
