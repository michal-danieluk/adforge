<div class="max-w-4xl mx-auto">
  <!-- Breadcrumb -->
  <div class="mb-4 text-sm text-gray-500">
    <%= link_to "Dashboard", dashboard_path, class: "hover:underline" %> /
    <%= link_to "Campaigns", campaigns_path, class: "hover:underline" %> /
    <%= link_to @creative.campaign.product_name, @creative.campaign, class: "hover:underline" %> /
    Creative #<%= @creative.id %>
  </div>

  <!-- Status Banner -->
  <% if @creative.pending? %>
    <div class="bg-yellow-50 border-l-4 border-yellow-500 p-4 mb-6 rounded">
      <div class="flex items-center">
        <svg class="animate-spin h-5 w-5 text-yellow-600 mr-3" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        <p class="text-yellow-700 font-medium">
          Generating your ad... This page will auto-refresh.
        </p>
      </div>
    </div>
    <meta http-equiv="refresh" content="3">
  <% elsif @creative.failed? %>
    <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6 rounded">
      <p class="text-red-700 font-medium">Generation failed. Please try again.</p>
      <%= button_to "↻ Try Again", campaign_creatives_path(@campaign), method: :post, class: "mt-2 inline-block rounded-md px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white font-semibold text-sm transition-colors ring-2 ring-indigo-500 ring-offset-2" %>
    </div>
  <% end %>

  <!-- Main Content (only if generated) -->
  <% if @creative.generated? %>
    <div class="grid md:grid-cols-2 gap-8">
      <!-- Image Preview -->
      <div>
        <h2 class="text-xl font-bold text-gray-900 mb-4">Generated Ad</h2>
        <div class="bg-white border border-gray-200 rounded-lg p-4 shadow-sm">
          <% if @creative.final_image.attached? %>
            <%= image_tag @creative.final_image,
                          class: "w-full rounded shadow-sm",
                          alt: "Generated ad for #{@creative.campaign.product_name}" %>
          <% else %>
            <div class="bg-gray-100 aspect-square rounded flex items-center justify-center">
              <p class="text-gray-400">Image processing...</p>
            </div>
          <% end %>
        </div>

        <!-- Actions -->
        <div class="mt-4 flex gap-3">
          <%= link_to "↓ Download Image",
                      download_creative_path(@creative),
                      class: "bg-indigo-600 text-white px-6 py-3 rounded-md hover:bg-indigo-700 ring-2 ring-indigo-500 ring-offset-2 font-semibold text-sm flex-1 text-center transition-colors" %>

          <%= button_to "✕ Delete",
                        campaign_creative_path(@campaign, @creative),
                        method: :delete,
                        data: { turbo_confirm: "Are you sure you want to delete this creative?" },
                        class: "bg-red-600 text-white px-4 py-3 rounded-md hover:bg-red-700 font-medium text-sm transition-colors" %>
        </div>
      </div>

      <!-- Ad Copy -->
      <div>
        <h2 class="text-xl font-bold text-gray-900 mb-4">Ad Copy</h2>
        <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm">
          <% if @creative.headline.present? %>
            <h3 class="text-2xl font-bold text-gray-900 mb-4"><%= @creative.headline %></h3>
          <% end %>
          <p class="text-gray-700 whitespace-pre-line leading-relaxed"><%= @creative.body %></p>
        </div>

        <!-- AI Metadata -->
        <% if @creative.ai_model.present? %>
          <div class="mt-6 bg-blue-50 rounded-lg p-4 border border-blue-200">
            <h3 class="text-sm font-semibold text-blue-900 mb-3">AI Generation Info</h3>
            <dl class="space-y-2 text-sm">
              <div class="flex">
                <dt class="text-blue-700 w-32 flex-shrink-0">Model:</dt>
                <dd class="text-blue-900 font-medium"><%= @creative.ai_model %></dd>
              </div>
              <div class="flex">
                <dt class="text-blue-700 w-32 flex-shrink-0">Tokens:</dt>
                <dd class="text-blue-900"><%= number_with_delimiter(@creative.ai_tokens) %></dd>
              </div>
              <div class="flex">
                <dt class="text-blue-700 w-32 flex-shrink-0">Cost:</dt>
                <dd class="text-blue-900">$<%= sprintf("%.4f", @creative.ai_cost_dollars) %></dd>
              </div>
              <% if @creative.background_prompt.present? %>
                <div class="flex pt-2 border-t border-blue-200">
                  <dt class="text-blue-700 w-32 flex-shrink-0">Background Prompt:</dt>
                  <dd class="text-blue-600 text-xs"><%= @creative.background_prompt %></dd>
                </div>
              <% end %>
            </dl>
          </div>
        <% end %>

        <!-- Campaign Context -->
        <div class="mt-6 bg-gray-50 rounded-lg p-4 border border-gray-200">
          <h3 class="text-sm font-semibold text-gray-700 mb-3">Campaign Details</h3>
          <dl class="space-y-2 text-sm">
            <div class="flex">
              <dt class="text-gray-500 w-32 flex-shrink-0">Product:</dt>
              <dd class="text-gray-900 font-medium"><%= @creative.campaign.product_name %></dd>
            </div>
            <div class="flex">
              <dt class="text-gray-500 w-32 flex-shrink-0">Audience:</dt>
              <dd class="text-gray-900"><%= @creative.campaign.target_audience %></dd>
            </div>
            <div class="flex">
              <dt class="text-gray-500 w-32 flex-shrink-0">Brand:</dt>
              <dd>
                <%= link_to @creative.campaign.brand.name,
                            @creative.campaign.brand,
                            class: "text-blue-600 hover:underline font-medium" %>
              </dd>
            </div>
            <% if @creative.campaign.description.present? %>
              <div class="flex pt-2 border-t border-gray-200">
                <dt class="text-gray-500 w-32 flex-shrink-0">Description:</dt>
                <dd class="text-gray-600 text-xs"><%= @creative.campaign.description %></dd>
              </div>
            <% end %>
          </dl>
        </div>

        <!-- Generate Another -->
        <div class="mt-6">
          <%= button_to "↻ Generate 3 More Ads",
                        generate_campaign_path(@campaign),
                        method: :post,
                        class: "w-full bg-white text-gray-700 border border-gray-300 px-4 py-2.5 rounded-md hover:bg-gray-50 font-medium text-sm transition-colors" %>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Back Link -->
  <div class="mt-8">
    <%= link_to @creative.campaign, class: "text-gray-600 hover:text-gray-900 text-sm font-medium" do %>
      <svg class="w-4 h-4 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Back to Campaign
    <% end %>
  </div>
</div>
