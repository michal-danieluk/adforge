<div class="max-w-6xl mx-auto">
  <!-- Header -->
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">
        Reklamy dla <%= @campaign.product_name %>
      </h1>
      <p class="text-gray-600 mt-1 text-sm">
        <%= link_to @campaign.brand.name, @campaign.brand, class: "text-indigo-600 hover:underline" %> ·
        <%= link_to "Szczegóły kampanii", @campaign, class: "text-indigo-600 hover:underline" %>
      </p>
    </div>

    <%= button_to "+ Wygeneruj nową reklamę",
                  campaign_creatives_path(@campaign),
                  method: :post,
                  class: "bg-indigo-600 text-white px-6 py-3 rounded-md hover:bg-indigo-700 ring-2 ring-indigo-500 ring-offset-2 font-semibold text-sm transition-colors" %>
  </div>

  <!-- Grid of Creatives -->
  <% if @creatives.empty? %>
    <!-- Empty State -->
    <div class="text-center py-16 px-4 bg-white rounded-lg shadow-sm border border-gray-200">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
      </svg>
      <h3 class="mt-4 text-lg font-semibold text-gray-900">
        Brak wygenerowanych reklam
      </h3>
      <p class="mt-2 text-sm text-gray-600 max-w-sm mx-auto">
        Kliknij "Wygeneruj nową reklamę", aby stworzyć pierwszą reklamę do social media z pomocą AI.
        To zajmie około 30 sekund.
      </p>
      <%= button_to "Wygeneruj pierwszą reklamę",
                    campaign_creatives_path(@campaign),
                    method: :post,
                    class: "mt-6 inline-block rounded-md px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white font-semibold text-sm transition-colors ring-2 ring-indigo-500 ring-offset-2" %>
      <p class="mt-4 text-xs text-gray-400">
        Reklamy generowane przez AI, idealnie dopasowane do Twojej marki
      </p>
    </div>
  <% else %>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @creatives.each do |creative| %>
        <div class="bg-white border border-gray-200 rounded-lg overflow-hidden hover:shadow-md hover:border-indigo-200 transition-all">
          <%= link_to campaign_creative_path(@campaign, creative), class: "block" do %>
            <!-- Image Thumbnail -->
            <div class="aspect-square bg-gray-100 relative">
              <% if creative.final_image.attached? %>
                <%= image_tag creative.final_image.variant(resize_to_limit: [400, 400]),
                              class: "w-full h-full object-cover" %>
              <% elsif creative.pending? %>
                <div class="w-full h-full flex items-center justify-center">
                  <svg class="animate-spin h-8 w-8 text-gray-400" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                  </svg>
                </div>
              <% else %>
                <div class="w-full h-full flex items-center justify-center">
                  <svg class="h-8 w-8 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
              <% end %>
            </div>

            <!-- Info -->
            <div class="p-4">
              <p class="text-sm text-gray-500">
                Utworzono <%= time_ago_in_words(creative.created_at) %> temu
              </p>

              <!-- Status Badge -->
              <% status_classes = case creative.status
                 when "generated" then "bg-green-100 text-green-800"
                 when "failed" then "bg-red-100 text-red-800"
                 else "bg-yellow-100 text-yellow-800"
                 end
                 status_text = case creative.status
                 when "generated" then "Gotowe"
                 when "failed" then "Błąd"
                 else "Oczekujące"
                 end %>
              <span class="inline-block mt-2 px-2 py-1 text-xs rounded font-medium <%= status_classes %>">
                <%= status_text %>
              </span>

              <!-- Body Preview -->
              <% if creative.body.present? %>
                <p class="mt-2 text-xs text-gray-600 line-clamp-2">
                  <%= creative.body.lines.first&.strip %>
                </p>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- Back Link -->
  <div class="mt-8">
    <%= link_to @campaign, class: "text-gray-600 hover:text-gray-900 text-sm font-medium" do %>
      <svg class="w-4 h-4 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Wróć do kampanii
    <% end %>
  </div>
</div>
