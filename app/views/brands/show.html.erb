<% content_for :title, "Showing brand" %>

<div class="md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-4xl">Showing brand</h1>

  <%= render @brand %>

  <div class="mt-8 flex flex-wrap gap-2">
    <%= link_to "Edit Brand", edit_brand_path(@brand), class: "rounded-md px-4 py-2 bg-white border border-gray-300 text-gray-700 hover:bg-gray-50 font-medium text-sm transition-colors" %>
    <%= link_to "← Back to Brands", brands_path, class: "rounded-md px-4 py-2 bg-white border border-gray-300 text-gray-700 hover:bg-gray-50 font-medium text-sm transition-colors" %>
    <%= button_to "Delete Brand", @brand, method: :delete, form_class: "inline-block", class: "rounded-md px-4 py-2 text-white bg-red-600 hover:bg-red-700 font-medium text-sm cursor-pointer transition-colors", data: { turbo_confirm: "Are you sure you want to delete this brand and all its campaigns?" } %>
  </div>

  <div class="mt-12 pt-8 border-t border-gray-200">
    <div class="flex justify-between items-center mb-6">
      <h2 class="font-bold text-2xl text-gray-900">Campaigns</h2>
      <%= link_to new_campaign_path(brand_id: @brand.id), class: "rounded-md px-4 py-2.5 bg-blue-600 hover:bg-blue-700 text-white font-semibold text-sm transition-colors ring-2 ring-blue-500 ring-offset-2" do %>
        <svg class="w-4 h-4 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        New Campaign
      <% end %>
    </div>

    <% if @recent_campaigns.any? %>
      <div class="space-y-3">
        <% @recent_campaigns.each do |campaign| %>
          <%= link_to campaign, class: "block border border-gray-200 rounded-lg p-4 hover:border-blue-200 hover:bg-gray-50 transition-all" do %>
            <div class="font-medium text-gray-900"><%= campaign.product_name %></div>
            <p class="text-sm text-gray-600 mt-1"><%= campaign.target_audience %></p>
            <p class="text-xs text-gray-400 mt-1"><%= time_ago_in_words(campaign.created_at) %> ago</p>
          <% end %>
        <% end %>
      </div>

      <% if @brand.campaigns.count > 5 %>
        <div class="mt-4 text-center">
          <%= link_to "View all #{@brand.campaigns.count} campaigns →", campaigns_path, class: "text-blue-600 hover:text-blue-700 font-medium text-sm" %>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-12">
        <p class="text-gray-500 mb-4">No campaigns yet for this brand</p>
        <%= link_to "Create First Campaign", new_campaign_path(brand_id: @brand.id), class: "inline-block rounded-md px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold text-sm transition-colors ring-2 ring-blue-500 ring-offset-2" %>
      </div>
    <% end %>
  </div>
</div>
