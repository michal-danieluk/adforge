<% content_for :title, "Brands" %>

<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Brands</h1>
    <%= link_to "New Brand", new_brand_path, class: "rounded-md px-4 py-2.5 bg-blue-600 hover:bg-blue-700 text-white font-semibold text-sm transition-colors ring-2 ring-blue-500 ring-offset-2" %>
  </div>

  <div class="mt-8 overflow-hidden shadow ring-1 ring-black ring-opacity-5 rounded-lg">
    <% if @brands.any? %>
      <table class="min-w-full divide-y divide-gray-300">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Name</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Tone</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Primary Color</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Logo</th>
            <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
              <span class="sr-only">Actions</span>
            </th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200 bg-white">
          <% @brands.each do |brand| %>
            <tr class="hover:bg-gray-50 transition-colors">
              <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6">
                <%= link_to brand.name, brand, class: "text-blue-600 hover:text-blue-900 font-medium" %>
              </td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500 capitalize">
                <%= brand.tone_of_voice %>
              </td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                <div class="flex items-center gap-2">
                  <div class="w-6 h-6 rounded border border-gray-300" style="background-color: <%= brand.primary_color %>;"></div>
                  <code class="text-xs"><%= brand.primary_color %></code>
                </div>
              </td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                <% if brand.logo.attached? %>
                  <%= image_tag brand.logo, class: "h-8 w-auto" %>
                <% else %>
                  <span class="text-gray-400 italic">No logo</span>
                <% end %>
              </td>
              <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                <%= link_to "Edit", edit_brand_path(brand), class: "text-gray-600 hover:text-gray-900 mr-4" %>
                <%= button_to "Delete", brand, method: :delete, class: "text-red-600 hover:text-red-900 inline font-medium", form: { class: "inline" }, data: { turbo_confirm: "Are you sure you want to delete this brand and all its campaigns?" } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="text-center py-16 px-4 bg-white rounded-lg">
        <!-- Heroicon: swatch (outline) -->
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
        </svg>

        <h3 class="mt-4 text-lg font-semibold text-gray-900">
          Create your first brand
        </h3>
        <p class="mt-2 text-sm text-gray-600 max-w-sm mx-auto">
          Set up your brand identity with colors, logos, and tone of voice.
          Then generate professional social media ads that match your brand perfectly.
        </p>

        <%= link_to "Create First Brand", new_brand_path, class: "mt-6 inline-block rounded-md px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold text-sm transition-colors ring-2 ring-blue-500 ring-offset-2" %>

        <p class="mt-4 text-xs text-gray-400">
          Join marketers creating on-brand ads in minutes
        </p>
      </div>
    <% end %>
  </div>
</div>
