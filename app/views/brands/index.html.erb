<% content_for :title, "Brands" %>

<div class="w-full">
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-zinc-900">Brands</h1>
      <p class="mt-1 text-sm text-zinc-500">Manage your brand identities</p>
    </div>
    <%= link_to "+ New Brand", new_brand_path, class: "px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white font-medium text-sm rounded-md shadow-sm transition-colors" %>
  </div>

  <% if @brands.any? %>
    <!-- Grid of Brand Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @brands.each do |brand| %>
        <%= link_to brand, class: "block" do %>
          <div class="bg-white border border-zinc-200 rounded-xl overflow-hidden hover:border-indigo-300 transition-colors cursor-pointer">
            <!-- Colored top bar -->
            <div class="h-1" style="background-color: <%= brand.primary_color %>;"></div>

            <!-- Card content -->
            <div class="p-6">
              <!-- Logo or placeholder -->
              <div class="mb-4">
                <% if brand.logo.attached? %>
                  <%= image_tag brand.logo, class: "h-12 w-auto object-contain" %>
                <% else %>
                  <div class="h-12 w-12 rounded-lg bg-zinc-100 flex items-center justify-center">
                    <svg class="w-6 h-6 text-zinc-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
                    </svg>
                  </div>
                <% end %>
              </div>

              <!-- Brand name -->
              <h3 class="text-lg font-semibold text-zinc-900 mb-2"><%= brand.name %></h3>

              <!-- Brand details -->
              <div class="space-y-2 text-sm">
                <div class="flex items-center gap-2 text-zinc-500">
                  <span class="capitalize"><%= brand.tone_of_voice || "No tone set" %></span>
                </div>

                <div class="flex items-center gap-2">
                  <div class="w-4 h-4 rounded border border-zinc-300" style="background-color: <%= brand.primary_color %>;"></div>
                  <code class="text-xs text-zinc-500"><%= brand.primary_color %></code>
                </div>

                <div class="text-xs text-zinc-400 mt-3">
                  <%= pluralize(brand.campaigns.count, 'campaign') %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="border-2 border-dashed border-zinc-300 rounded-lg p-12 text-center">
      <!-- Heroicon: folder-plus -->
      <svg class="mx-auto h-12 w-12 text-zinc-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
      </svg>

      <h3 class="mt-4 text-lg font-semibold text-zinc-900">
        No brands yet
      </h3>
      <p class="mt-2 text-sm text-zinc-500 max-w-sm mx-auto">
        Get started by creating your first brand identity with colors, logos, and tone of voice.
      </p>

      <%= link_to "+ Create First Brand", new_brand_path, class: "mt-6 inline-block px-6 py-2.5 bg-indigo-600 hover:bg-indigo-700 text-white font-medium text-sm rounded-md shadow-sm transition-colors" %>
    </div>
  <% end %>
</div>
