<div id="<%= dom_id brand %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1 text-lg">Name:</strong>
    <p class="text-2xl font-bold text-gray-900"><%= brand.name %></p>
  </div>

  <div>
    <strong class="block font-medium mb-1">Tone of voice:</strong>
    <p class="text-lg capitalize"><%= brand.tone_of_voice %></p>
  </div>

  <% if brand.logo.attached? %>
    <div>
      <strong class="block font-medium mb-2">Logo:</strong>
      <%= image_tag brand.logo, class: "max-h-40 border border-gray-300 rounded-md shadow-sm" %>
    </div>
  <% end %>

  <div>
    <strong class="block font-medium mb-2">Brand Colors:</strong>
    <% if brand.brand_colors.any? %>
      <div class="space-y-2">
        <% brand.brand_colors.each do |color| %>
          <div class="flex items-center gap-3">
            <div class="w-8 h-8 rounded border-2 border-gray-300 shadow-sm" style="background-color: <%= color.hex_value %>;"></div>
            <code class="text-sm font-mono bg-gray-100 px-2 py-1 rounded"><%= color.hex_value %></code>
            <% if color.primary? %>
              <span class="text-xs font-semibold px-2 py-1 bg-blue-100 text-blue-800 rounded">PRIMARY</span>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500 italic">No colors defined</p>
    <% end %>
  </div>
</div>
