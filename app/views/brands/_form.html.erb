<%= form_with(model: brand, class: "contents") do |form| %>
  <% if brand.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(brand.errors.count, "error") %> prohibited this brand from being saved:</h2>

      <ul class="list-disc ml-6">
        <% brand.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": brand.errors[:name].none?, "border-red-400 focus:outline-red-600": brand.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :tone_of_voice %>
    <%= form.select :tone_of_voice, %w[professional casual friendly authoritative], { prompt: "Select tone of voice" }, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": brand.errors[:tone_of_voice].none?, "border-red-400 focus:outline-red-600": brand.errors[:tone_of_voice].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :logo, "Logo (PNG, JPEG, or SVG, max 5MB)" %>
    <%= form.file_field :logo, accept: "image/png,image/jpeg,image/svg+xml", class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": brand.errors[:logo].none?, "border-red-400 focus:outline-red-600": brand.errors[:logo].any?}] %>
    <% if brand.logo.attached? %>
      <p class="mt-2 text-sm text-gray-600">Current logo: <%= brand.logo.filename %></p>
    <% end %>
  </div>

  <div class="my-5" data-controller="nested-form">
    <h3 class="text-lg font-semibold mb-3">Brand Colors</h3>
    <p class="text-sm text-gray-600 mb-3">Add at least one color and mark one as primary.</p>

    <div data-nested-form-target="container">
      <%= form.fields_for :brand_colors do |color_form| %>
        <%= render "brand_color_fields", form: color_form %>
      <% end %>
    </div>

    <template data-nested-form-target="template">
      <%= form.fields_for :brand_colors, BrandColor.new, child_index: 'NEW_RECORD' do |color_form| %>
        <%= render "brand_color_fields", form: color_form %>
      <% end %>
    </template>

    <button type="button" data-action="click->nested-form#add" class="mt-3 rounded-md px-3 py-2 bg-gray-200 hover:bg-gray-300 text-gray-800 inline-block font-medium cursor-pointer">
      + Add Color
    </button>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
